<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CONVUNI_RESTFULL_DOTNET_CLIMOV.CustomAlert"
             BackgroundImageSource="fondosully_2.png">
    <Frame BackgroundColor="#efefef" CornerRadius="15" Padding="0" HasShadow="False" Margin="20" WidthRequest="300" HeightRequest="300">
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20" BackgroundColor="Transparent" Spacing="30">
            <Label x:Name="TitleLabel" TextColor="Black" FontSize="24" FontFamily="FredokaBold" HorizontalOptions="Center" />
            <Label x:Name="MessageLabel" TextColor="Gray" FontSize="16" FontFamily="FredokaRegular" HorizontalOptions="Center" />
            <Button x:Name="OkButton" Text="OK" BackgroundColor="#0d6efd" TextColor="White" FontFamily="FredokaSemiBold" Clicked="OnOkClicked" />
        </StackLayout>
    </Frame>
</ContentPage>
