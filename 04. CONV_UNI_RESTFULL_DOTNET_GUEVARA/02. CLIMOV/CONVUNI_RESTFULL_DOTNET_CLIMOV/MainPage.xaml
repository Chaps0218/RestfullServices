<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CONVUNI_RESTFULL_DOTNET_CLIMOV.MainPage"
             BackgroundColor="#57afb5">

    <ScrollView>
        <StackLayout Padding="40,0,0,200" Spacing="25" VerticalOptions="Center" HorizontalOptions="Center">

            <StackLayout x:Name="LoginStack" IsVisible="True" HorizontalOptions="Center" WidthRequest="300" Spacing="10">

                <Frame BackgroundColor="#d0f4de" CornerRadius="15" Padding="0" HasShadow="False" HeightRequest="180" WidthRequest="300">
                    <Grid>
                        <Frame BackgroundColor="Transparent" CornerRadius="15" Padding="0" IsClippedToBounds="True" HasShadow="False">
                            <Image Source="https://static1.srcdn.com/wordpress/wp-content/uploads/2022/12/monsters-inc-sully.jpg" 
                               Aspect="Fill" 
                               HorizontalOptions="FillAndExpand" 
                               VerticalOptions="FillAndExpand" />
                        </Frame>
                    </Grid>
                </Frame>


                <Frame BackgroundColor="#d0f4de" CornerRadius="15" Padding="0" HasShadow="False" Margin="20" WidthRequest="300">
                    <StackLayout Padding="20" Spacing="20">
                        <Label Text="¡Bienvenido!" FontSize="30" TextColor="#7209b7" HorizontalOptions="Center"/>
                        <Frame BackgroundColor="#7a5c85" CornerRadius="10" Padding="5" HasShadow="False">
                            <Entry x:Name="UsernameEntry" Placeholder="Usuario" TextColor="White" BackgroundColor="Transparent" PlaceholderColor="White" />
                        </Frame>

                        <Frame BackgroundColor="#7a5c85" CornerRadius="10" Padding="5" HasShadow="False">
                            <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True" TextColor="White" BackgroundColor="Transparent" PlaceholderColor="White" />
                        </Frame>

                    </StackLayout>
                </Frame>



                <Button Text="Login" BackgroundColor="#759634" TextColor="White" Clicked="OnLoginClicked"/>
            </StackLayout>

            <StackLayout x:Name="ConversionStack" IsVisible="False" HorizontalOptions="Center" WidthRequest="300" Spacing="15">

                <Frame BackgroundColor="#d0f4de" CornerRadius="15" Padding="0" HasShadow="False" HeightRequest="180" WidthRequest="300">
                    <Grid>
                        <Frame BackgroundColor="Transparent" CornerRadius="15" Padding="0" IsClippedToBounds="True" HasShadow="False">
                            <Image Source="https://static1.srcdn.com/wordpress/wp-content/uploads/2022/12/monsters-inc-sully.jpg" 
                               Aspect="Fill" 
                               HorizontalOptions="FillAndExpand" 
                               VerticalOptions="FillAndExpand" />
                        </Frame>
                    </Grid>
                </Frame>

                <Frame BackgroundColor="#d0f4de" CornerRadius="15" Padding="0" HasShadow="False" Margin="12" WidthRequest="300">
                    <StackLayout Padding="20" Spacing="20">
                        <Label Text="Conversión Restfull - Grupo 5" FontSize="30" TextColor="#7209b7" HorizontalOptions="Center"/>

                        <Frame BackgroundColor="#7a5c85" CornerRadius="10" Padding="5" HasShadow="False">
                            <Picker x:Name="FromUnitPicker" Title="Unidad Origen" TextColor="White"  BackgroundColor="Transparent" />
                        </Frame>
                        <Frame BackgroundColor="#7a5c85" CornerRadius="10" Padding="5" HasShadow="False">
                            <Picker x:Name="ToUnitPicker" Title="Unidad Destino" TextColor="White" BackgroundColor="Transparent" />
                        </Frame>

                        <Frame BackgroundColor="#7a5c85" CornerRadius="10" Padding="5" HasShadow="False">
                            <Entry x:Name="ValueEntry" Placeholder="Ingrese el valor..." TextColor="White" Keyboard="Numeric" BackgroundColor="Transparent" PlaceholderColor="White"/>
                        </Frame>
                        <Button Text="Convertir" BackgroundColor="#5A8DFD" TextColor="White" Clicked="OnConvertClicked"/>

                        <Label x:Name="ResultLabel" Text="" TextColor="#7209b7" FontSize="20" HorizontalOptions="Center" Margin="0,10,0,0"/>

                    </StackLayout>

                </Frame>
                <Button Text="Logout" BackgroundColor="#FF6347" TextColor="White" Clicked="OnBackToLoginClicked"/>
            </StackLayout>

        </StackLayout>
    </ScrollView>

</ContentPage>
